@using Pro.Extension
@using Pro.Common
@using Pro.Model
@model PagedList<Pro.Model.Student>

@{
    ViewBag.Title = "Index 列表";
    Layout = "~/Views/Shared/_LayoutNull.cshtml";
}


<section class="panel panel-widget">
    <div class="panel-body">
        <!--背景颜色条-->
            <div class="widget box">
                <div class="widget-header">
                    <h4 class="pull-left"><i class="icon-reorder"></i>搜索条件</h4>
                    <div class="toolbar no-padding pull-right">
                        <div class="btn-group">
                            <span class="btn btn-xs widget-collapse">
                                <i class="icon-angle-down">
                                </i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="widget-content bg-white">
                    <form class="form-group" id="formPageSearch">
                        <input name="url" type="hidden" value="Index" />
                        <input name="page" type="hidden" value="1" />
                        <input name="pagesize" type="hidden" value="10" />
                        <div class="form-group col-sm-3">
                            <input class="form-control" name="txtname" placeholder="请输入姓名" type="text">
                        </div>
                        <div class="form-group col-sm-3 text-left">
                            <input type="submit" class="btn btn-primary" value="查询" />
                            <button type="button" onclick="epd.ajaxPartial(1);" class="btn btn-success" data-toggle="tooltip" title="搜索"><i class="icon-search"></i> &nbsp;搜索</button>
                            <a href="Create" data-toggle="tooltip" title="添加" class="btn btn-info"><i class="icon-plus"></i> &nbsp;添加</a>
                        </div>
                        <i class="clearfix"></i>
                    </form>
                </div>
        </div>
        <div id="pageTable">
            <!---如果table不放在 panel-body 中，面板会和表格连接 没有空隙--->
            <table class="table table-striped table-hover table-bordered bg-white">
                <tr>
                    <th class="th-checkbox">
                        <label class="checkbox-inline" style=" font-weight: bold;">
                            <input type="checkbox" onclick="chkAll(chkall)"> 全选
                        </label>
                    </th>
                    <th class="th-title">
                        @Html.DisplayNameFor(model => model[0].s_name)
                    </th>
                    <th class="th-title">
                        @Html.DisplayNameFor(model => model[0].s_loginName)
                    </th>
                    <th class="th-title">
                        @Html.DisplayNameFor(model => model[0].s_passWord)
                    </th>
                    <th class="th-title">
                        @Html.DisplayNameFor(model => model[0].s_address)
                    </th>
                    <th class="th-title">
                        @Html.DisplayNameFor(model => model[0].s_sex)
                    </th>
                    <th class="th-title">
                        @Html.DisplayNameFor(model => model[0].s_age)
                    </th>
                    <th class="th-title">
                        @Html.DisplayNameFor(model => model[0].s_phone)
                    </th>
                    <th class="th-title">
                        @Html.DisplayNameFor(model => model[0].s_status)
                    </th>
                    <th class="th-title">
                        @Html.DisplayNameFor(model => model[0].s_remark)
                    </th>
                    <th class="th-title">
                        @Html.DisplayNameFor(model => model[0].s_createDate)
                    </th>
                    @*<th class="th-title">
                        @Html.DisplayNameFor(model => model[0].s_GradeID)
                    </th>*@
                    <th class="th-title">操作</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="th-title">
                            <label class="checkbox-inline">
                                <input name="s_id" value="@Html.DisplayFor(modelItem => item.s_id)" type="checkbox" />
                            </label>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.s_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.s_loginName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.s_passWord)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.s_address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.s_sex)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.s_age)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.s_phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.s_status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.s_remark)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.s_createDate)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.s_GradeID)
                        </td>*@
                        <td>
                            <a href="Edit/@item.s_id?key=@Request.QueryString["key"]" data-toggle="tooltip" title="编辑" class="btn btn-info btn-xs"><i class="icon-edit"></i>  编辑</a>
                            <a href="Details/@item.s_id?key=@Request.QueryString["key"]" data-toggle="tooltip" title="预览" class="btn btn-success btn-xs"><i class="icon-eye-open"></i>  预览</a>
                            <a href="Delete/@item.s_id?key=@Request.QueryString["key"]" data-toggle="tooltip" title="删除" class="btn btn-danger btn-xs"><i class="icon-trash"></i>  删除</a>
                        </td>
                    </tr>
                }
            </table>
            @Html.Pager(Model)
        </div>
    </div>
</section>
@section scripts{
    <!--日期提示插件-->

    <script type="text/javascript">

    </script>
}
