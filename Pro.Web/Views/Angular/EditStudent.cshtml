@using Pro.Extension
@using Pro.Common
@model Pro.Model.Student
@{
    ViewBag.Title = "修改 EditStudent";
    Layout = "~/Views/Shared/_LayoutNull.cshtml";
}
@using (Html.BeginForm())
{
    <section class="panel panel-widget">
        <div class="panel-body bg-white">
            <div class="form-horizontal tasi-form">
                <div class="col-md-12">
                    <div class="widget-content">
                        @Html.HiddenFor(model => model.s_id)
                        <div class="form-group">
                            @Html.LabelFor(model => model.s_name, new { @class = "control-label col-sm-2" })
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.s_name, new { @class = "form-control", placeholder = "请输入" + Html.DisplayNameFor(model => model.s_name) })
                                @Html.ValidationMessageFor(model => model.s_name)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.s_loginName, new { @class = "control-label col-sm-2" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.s_loginName, new { @class = "form-control", placeholder = "请输入" + Html.DisplayNameFor(model => model.s_loginName) })
                                @Html.ValidationMessageFor(model => model.s_loginName)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.s_passWord, new { @class = "control-label col-sm-2" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.s_passWord, new { @class = "form-control", placeholder = "请输入" + Html.DisplayNameFor(model => model.s_passWord) })
                                @Html.ValidationMessageFor(model => model.s_passWord)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.s_address, new { @class = "control-label col-sm-2" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.s_address, new { @class = "form-control", placeholder = "请输入" + Html.DisplayNameFor(model => model.s_address) })
                                @Html.ValidationMessageFor(model => model.s_address)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.s_sex, new { @class = "control-label col-sm-2" })
                            <div class="col-sm-9">
                                @Html.DropDownListFor(model => model.s_sex, ViewData["sexLiat"] as List<SelectListItem>, new { @class = "form-control", placeholder = "请输入" + Html.DisplayNameFor(model => model.s_sex) })
                                @Html.ValidationMessageFor(model => model.s_sex)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.s_age, new { @class = "control-label col-sm-2" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.s_age, new { @class = "form-control", placeholder = "请输入" + Html.DisplayNameFor(model => model.s_age) })
                                @Html.ValidationMessageFor(model => model.s_age)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.s_phone, new { @class = "control-label col-sm-2" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.s_phone, new { @class = "form-control", placeholder = "请输入" + Html.DisplayNameFor(model => model.s_phone) })
                                @Html.ValidationMessageFor(model => model.s_phone)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.s_status, new { @class = "control-label col-sm-2" })
                            <div class="col-sm-9">
                                @Html.DropDownListFor(model => model.s_status, ViewData["selectList"] as List<SelectListItem>, new { @class = "form-control", placeholder = "请输入" + Html.DisplayNameFor(model => model.s_status) })
                                @Html.ValidationMessageFor(model => model.s_status)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.s_remark, new { @class = "control-label col-sm-2" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.s_remark, new { @class = "form-control", placeholder = "请输入" + Html.DisplayNameFor(model => model.s_remark) })
                                @Html.ValidationMessageFor(model => model.s_remark)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.s_createDate, new { @class = "control-label col-sm-2" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.s_createDate, "{0:yyyy-MM-dd HH:mm:ss}", new { @class = "form-control", placeholder = "请输入" + Html.DisplayNameFor(model => model.s_createDate) })
                                @Html.ValidationMessageFor(model => model.s_createDate)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.s_Grade_ID, new { @class = "control-label col-sm-2" })
                            <div class="col-sm-9">
                                @Html.DropDownListFor(model => model.s_Grade_ID, ViewData["gradeList"] as List<SelectListItem>, new { @class = "form-control", placeholder = "请输入" + Html.DisplayNameFor(model => model.s_Grade_ID) })
                                @Html.ValidationMessageFor(model => model.s_Grade_ID)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        function submitForm() {
            hhl.ajax("/Angular/UpdateStu");
        }
    </script>
}
